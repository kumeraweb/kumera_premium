---
const {
  title = 'Kumera — Agencia Digital',
  description = 'Ingeniería + creatividad para marcas que quieren resultados reales.'
} = Astro.props
import '../styles/global.css'
import Header from '../components/Header.astro'
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon genérico por ahora -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Header logoText="KÜMERA" />
    <main>
      <slot />
    </main>
  </body>
</html>
