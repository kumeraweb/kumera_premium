---
import { MessageCircle } from '@lucide/astro'
import { contact, getWhatsAppUrl } from '../data/site'

const wa = getWhatsAppUrl(contact.whatsapp.messages.default)
---

<a
  href={wa}
  target="_blank"
  class="fixed bottom-6 right-5 z-50 flex h-14 w-14 items-center justify-center rounded-full bg-black/90 text-white shadow-[0_22px_45px_rgba(0,0,0,0.12)] transition hover:scale-105 hover:opacity-90 md:h-16 md:w-16 animate-pulse"
  aria-label="WhatsApp"
>
  <MessageCircle class="h-6 w-6 md:h-7 md:w-7" />
</a>
