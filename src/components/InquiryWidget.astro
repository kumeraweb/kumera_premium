<div class="km-inquiry-tab" id="kmInquiryTab">¿Necesitas información?</div>

<!-- MODAL OVERLAY -->
<div class="km-inquiry-overlay" id="kmInquiryOverlay">
  <div class="km-inquiry-modal">
    <div class="modal-bg">KÜMERA</div>

    <h3>Hablemos</h3>

    <form class="km-inquiry-form">
      <input type="text" placeholder="Tu nombre" required />
      <input type="email" placeholder="Correo" required />
      <textarea placeholder="Mensaje (opcional)"></textarea>
      <button type="submit">Enviar</button>
    </form>

    <button class="km-close-modal" id="kmCloseModal">Cerrar</button>
  </div>
</div>

<style>
  /* --------------------------------------------- */
  /* TAB LATERAL                                   */
  /* --------------------------------------------- */
  .km-inquiry-tab {
    position: fixed;
    top: 40%;
    left: -20px;
    transform: translateY(-50%) rotate(-90deg);

    background: var(--color-brand);
    color: white;

    padding: 0.6rem 1rem;
    border-radius: 6px 6px 0 0;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;

    cursor: pointer;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);

    z-index: 9999;
    opacity: 0;
    transition:
      left 0.45s cubic-bezier(0.25, 0.6, 0.35, 1),
      opacity 0.45s ease;
  }

  /* Tab visible */
  .km-inquiry-tab.visible {
    left: -80px;
    opacity: 1;
  }

  /* --------------------------------------------- */
  /* OVERLAY MINIMALISTA                            */
  /* --------------------------------------------- */
  .km-inquiry-overlay {
    position: fixed;
    inset: 0;
    background: rgba(10, 10, 10, 0.55); /* suave, elegante */
    backdrop-filter: blur(6px);
    display: flex;
    justify-content: center;
    align-items: center;

    opacity: 0;
    pointer-events: none;

    transition:
      opacity 0.45s ease,
      pointer-events 0.45s ease;

    z-index: 99999;
  }

  .km-inquiry-overlay.open {
    opacity: 1;
    pointer-events: all;
  }

  /* --------------------------------------------- */
  /* MODAL BOX — ESTÉTICA KÜMERA                    */
  /* --------------------------------------------- */
  .km-inquiry-modal {
    background: #ffffff;
    color: #000;
    width: 92%;
    max-width: 550px;

    padding: 3.2rem 3rem;
    border-radius: 16px;

    position: relative;
    overflow: hidden;

    transform: translateY(40px);
    opacity: 0;

    transition:
      opacity 0.5s ease,
      transform 0.6s cubic-bezier(0.25, 0.6, 0.35, 1);
  }

  .km-inquiry-overlay.open .km-inquiry-modal {
    transform: translateY(0);
    opacity: 1;
  }

  /* --------------------------------------------- */
  /* BACKGROUND WORD                                */
  /* --------------------------------------------- */
  .modal-bg {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);

    font-size: 7rem;
    font-weight: 800;
    letter-spacing: -0.04em;

    color: rgba(0, 0, 0, 0.035);
    user-select: none;
    pointer-events: none;
  }

  /* --------------------------------------------- */
  /* TITULO EDITORIAL                               */
  /* --------------------------------------------- */
  .km-inquiry-modal h3 {
    font-family: var(--font-heading);
    font-size: 2.1rem;
    line-height: 1.05;
    letter-spacing: -0.02em;
    font-weight: 700;
    color: #000;
    margin: 0 0 1.8rem 0;
    position: relative;
    z-index: 10;
  }

  /* --------------------------------------------- */
  /* FORM EDITORIAL                                  */
  /* --------------------------------------------- */
  .km-inquiry-form {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    position: relative;
    z-index: 10;
  }

  /* Inputs ultra-clean */
  .km-inquiry-form input,
  .km-inquiry-form textarea {
    width: 100%;
    padding: 0.85rem 0.9rem;
    border-radius: 10px;

    border: 1px solid rgba(0, 0, 0, 0.12);
    background: #fafafa;

    font-size: 1rem;
    font-family: var(--font-body);
    color: #111;

    transition:
      border-color 0.25s ease,
      background 0.25s ease;
  }

  .km-inquiry-form input:focus,
  .km-inquiry-form textarea:focus {
    border-color: var(--color-brand);
    background: #fff;
    outline: none;
  }

  /* Textarea suave */
  .km-inquiry-form textarea {
    min-height: 100px;
    resize: vertical;
  }

  /* --------------------------------------------- */
  /* BOTÓN KÜMERA                                    */
  /* --------------------------------------------- */
  .km-inquiry-form button {
    background: var(--color-brand);
    color: white;
    border: none;

    padding: 0.95rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;

    cursor: pointer;

    transition:
      transform 0.25s ease,
      opacity 0.25s ease;
  }

  .km-inquiry-form button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  /* --------------------------------------------- */
  /* BOTÓN CERRAR (EDITADO)                         */
  /* --------------------------------------------- */
  .km-close-modal {
    margin-top: 1.5rem;
    background: none;
    border: none;

    color: #555;
    font-size: 0.95rem;
    cursor: pointer;

    transition: opacity 0.25s ease;
  }

  .km-close-modal:hover {
    opacity: 0.6;
  }

  /* --------------------------------------------- */
  /* MOBILE                                         */
  /* --------------------------------------------- */
  @media (max-width: 768px) {
    .km-inquiry-modal {
      padding: 2.4rem 1.8rem;
      border-radius: 14px;
    }

    .km-inquiry-modal h3 {
      font-size: 1.7rem;
    }

    .modal-bg {
      font-size: 4.8rem;
    }
  }
</style>

<script is:inline>
  const tab = document.getElementById('kmInquiryTab')
  const overlay = document.getElementById('kmInquiryOverlay')
  const closeBtn = document.getElementById('kmCloseModal')

  // Aparecer el tab después de X segundos
  setTimeout(() => {
    tab.classList.add('visible')
  }, 5000)

  // Abrir modal
  tab.addEventListener('click', () => {
    overlay.classList.add('open')
  })

  // Cerrar modal
  closeBtn.addEventListener('click', () => {
    overlay.classList.remove('open')
  })

  // Cerrar tocando fuera
  overlay.addEventListener('click', (e) => {
    if (e.target === overlay) overlay.classList.remove('open')
  })
</script>
