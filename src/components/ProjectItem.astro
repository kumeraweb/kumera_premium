---
const { project } = Astro.props

// estado de apertura controlado por JS del cliente
---

<article class="project-item" data-project-id={project.id}>
  <header class="project-header">
    <div class="project-logo-circle">
      <img src={project.logo} alt={project.name} />
    </div>

    <div class="project-meta">
      <h3 class="project-name">{project.name}</h3>
      <p class="project-tagline">{project.tagline}</p>
    </div>

    <button class="project-toggle" aria-label="Mostrar detalles">
      <span class="chevron"></span>
    </button>
  </header>

  <div class="project-body">
    <p class="project-description">{project.description}</p>

    <div class="project-footer">
      <span class="project-year">{project.year}</span>
      <a href={project.link} class="project-link" target="_blank"> Ver proyecto â†’ </a>
    </div>
  </div>
</article>

<style>
  .project-item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.12);
    padding: 2rem 0;
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 1.2rem;
    cursor: pointer;
  }

  .project-logo-circle {
    width: 56px;
    height: 56px;
    min-width: 56px;
    border-radius: 50%;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
  }

  .project-logo-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) brightness(90%);
  }

  .project-meta {
    flex: 1;
  }

  .project-name {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    letter-spacing: -0.015em;
    margin: 0;
  }

  .project-tagline {
    font-size: 0.95rem;
    color: var(--color-muted);
    margin: 0.2rem 0 0 0;
  }

  /* ---------- Drawer ---------- */
  .project-body {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-8px);
    transition:
      max-height 0.4s ease,
      opacity 0.35s ease,
      transform 0.35s ease;
    padding-left: 4.4rem;
    padding-right: 0.4rem;
  }

  .project-item.open .project-body {
    max-height: 400px;
    opacity: 1;
    transform: translateY(0);
  }

  .project-description {
    margin: 1rem 0 0.8rem 0;
    opacity: 0.9;
  }

  .project-footer {
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
  }

  .project-link {
    text-decoration: underline;
  }

  /* Chevron */
  .project-toggle {
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .chevron {
    border-right: 2px solid #111;
    border-bottom: 2px solid #111;
    width: 8px;
    height: 8px;
    transform: rotate(45deg);
    transition: transform 0.3s ease;
  }

  .project-item.open .chevron {
    transform: rotate(-135deg);
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.project-item').forEach((item) => {
      const toggle = item.querySelector('.project-toggle')
      const header = item.querySelector('.project-header')

      header.addEventListener('click', () => {
        item.classList.toggle('open')
      })
    })
  })
</script>
