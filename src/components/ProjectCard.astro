---
const { image, title, subtitle } = Astro.props
---

<section class="project">
  <img src={image} alt={title} class="project-image" />

  <div class="project-content">
    <h2 class="project-title reveal-on-scroll">{title}</h2>
    <p class="project-subtitle reveal-on-scroll">{subtitle}</p>
  </div>
</section>

<style>
  /* -------------------------------------------------- */
  /* BASE                                               */
  /* -------------------------------------------------- */
  .project {
    width: 100%;
    margin: 4rem 0;
  }

  .project-image {
    width: 100%;
    height: 68vh;
    object-fit: cover;
  }

  .project-content {
    margin-top: 2rem;
    padding: 0 1.2rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .project-title {
    font-family: var(--font-heading);
    font-size: 2.2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: 1.05;
    margin: 0;
    color: var(--color-text);
  }

  .project-subtitle {
    font-family: var(--font-body);
    font-style: italic;
    font-size: 0.95rem;
    color: var(--color-muted);
    margin: 0;
  }

  /* -------------------------------------------------- */
  /* REVEAL ON SCROLL                                   */
  /* -------------------------------------------------- */

  .reveal-on-scroll {
    opacity: 0;
    transform: translateX(40px);
    transition:
      opacity 0.9s cubic-bezier(0.25, 0.6, 0.35, 1),
      transform 0.9s cubic-bezier(0.25, 0.6, 0.35, 1);
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* -------------------------------------------------- */
  /* DESKTOP                                            */
  /* -------------------------------------------------- */
  @media (min-width: 768px) {
    .project-image {
      height: 75vh;
    }

    .project-content {
      max-width: 900px;
      margin: 2.5rem auto 0 auto;
      padding: 0 var(--space-lg);
    }

    .project-title {
      font-size: 3.6rem;
    }

    .project-subtitle {
      font-size: 1.1rem;
    }
  }
</style>
