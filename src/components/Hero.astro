/* No necesita imports */
---

<section class="hero">
  <!-- Background Pattern Layer -->
  <div class="hero-pattern" id="heroPattern">
    <svg viewBox="0 0 1200 800" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M-150 180 C200 -40 900 260 1350 120"
        stroke="var(--color-accent)"
        stroke-width="3"
        stroke-linecap="round"
        opacity="0.70"></path>
      <path
        d="M-120 720 C480 780 850 260 1380 540"
        stroke="var(--color-brand)"
        stroke-width="2.2"
        stroke-linecap="round"
        opacity="0.38"></path>
    </svg>
    <div class="hero-pattern-mobile">
      <svg viewBox="0 0 400 800" fill="none" xmlns="http://www.w3.org/2000/svg">
        <line
          x1="300"
          y1="0"
          x2="0"
          y2="800"
          stroke="var(--color-accent)"
          stroke-width="10"
          opacity="0.35"></line>
        <line
          x1="60"
          y1="0"
          x2="60"
          y2="800"
          stroke="var(--color-brand)"
          stroke-width="3"
          opacity="0.28"></line>
      </svg>
    </div>
  </div>

  <div class="hero-inner">
    <div class="hero-line reveal-line"></div>

    <h1 class="hero-title reveal-left">
      AYUDAMOS A DAR VIDA A <span>tus ideas</span>.
    </h1>

    <p class="hero-sub reveal-right">KUMERA® — A DIGITAL PERFORMANCE & CREATIVE COMPANY</p>

    <a href="#contacto" class="hero-cta reveal-left">
      <span class="cta-arrow">➜</span> HABLEMOS DE TU PROYECTO
      <span class="underline"></span>
    </a>
    <p class="hero-tag reveal-right">
      Estrategia, diseño, desarrollo y campañas Google Ads de alto rendimiento.
    </p>
  </div>
</section>

<style>
  /* -------------------------------------------------- */
  /* BASE */
  /* -------------------------------------------------- */

  .hero {
    position: relative;
    background: var(--color-bg);
    padding: 12rem 0 12rem 0;
    display: flex;
    justify-content: flex-start;
    text-align: left;
    overflow: hidden;
  }

  /* -------------------------------------------------- */
  /* BACKGROUND PATTERN */
  /* -------------------------------------------------- */

  .hero-pattern {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    opacity: 0.55;
    transform: scale(1.15);
    transition: transform 0.2s ease-out;
  }

  .hero-pattern svg {
    height: 100%;
    width: 100%;
    position: absolute;
    top: -1%;
    left: 0%;
    opacity: 0.7;
  }

  .hero-pattern-mobile {
    display: none;
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    opacity: 0.55;
  }
  .hero-pattern-mobile svg {
    height: 100%;
    width: 100%;
  }

  /* -------------------------------------------------- */
  /* HERO INNER */
  /* -------------------------------------------------- */

  .hero-inner {
    position: relative;
    z-index: 2;
    max-width: 1000px;
    width: 100%;
    padding: 0 var(--space-lg);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-left: 5vw;
  }

  .hero-line {
    width: 200px;
    height: 6px;
    border-radius: 4px;
    background: var(--color-text);
    margin-bottom: 3rem;
    transform-origin: left;
    opacity: 0;
  }

  /* Line Reveal Animation */
  .reveal-line {
    animation: lineReveal 1.1s ease forwards;
  }

  @keyframes lineReveal {
    0% {
      transform: scaleX(0);
      opacity: 0;
    }
    100% {
      transform: scaleX(1);
      opacity: 1;
    }
  }

  /* -------------------------------------------------- */
  /* REVEAL ANIMATIONS */
  /* -------------------------------------------------- */

  .reveal-left {
    opacity: 0;
    transform: translateX(-40px);
    animation: revealLeft 1s cubic-bezier(0.25, 0.6, 0.35, 1) forwards;
  }

  .reveal-right {
    opacity: 0;
    transform: translateX(40px);
    animation: revealRight 1s cubic-bezier(0.25, 0.6, 0.35, 1) forwards;
  }

  @keyframes revealLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes revealRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .reveal-up {
    opacity: 0;
    transform: translateY(25px);
    animation: revealUp 1s cubic-bezier(0.25, 0.6, 0.35, 1) forwards;
  }

  .reveal-up:nth-child(2) {
    animation-delay: 0.12s;
  }
  .reveal-up:nth-child(3) {
    animation-delay: 0.22s;
  }
  .reveal-up:nth-child(4) {
    animation-delay: 0.32s;
  }

  @keyframes revealUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* -------------------------------------------------- */
  /* TYPOGRAPHY */
  /* -------------------------------------------------- */

  .hero-title {
    font-family: var(--font-heading);
    font-size: clamp(4.2rem, 7vw, 6.5rem);
    font-weight: 700;
    letter-spacing: -0.035em;
    line-height: 1.04;
    margin-bottom: 3rem;
  }

  .hero-title span {
    background: var(--color-text);
    color: var(--color-bg);
    padding: 0 0.5rem;
    border-radius: 4px;
    display: inline-block;
    transform: skew(-6deg);
  }

  .hero-sub {
    font-size: 0.95rem;
    letter-spacing: 0.17em;
    color: var(--color-muted);
    text-transform: uppercase;
    margin-bottom: 3rem;
  }

  /* CTA + underline animation */
  .hero-cta {
    position: relative;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-decoration: none;
    text-transform: uppercase;
    color: var(--color-text);
    padding-bottom: 0.25rem;
    transition:
      transform 0.28s ease,
      color 0.28s ease;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .hero-cta .underline {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 2px;
    width: 100%;
    background: var(--color-text);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.35s ease;
  }

  .hero-cta:hover .underline {
    transform: scaleX(1);
  }

  .hero-cta:hover {
    transform: translateX(6px);
  }

  /* -------------------------------------------------- */
  /* NEW HERO TAG */
  /* -------------------------------------------------- */

  .hero-tag {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    letter-spacing: 0.04em;
    color: var(--color-muted);
    max-width: 380px;
  }

  @keyframes arrowBounceX {
    0% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-4px);
    }
    100% {
      transform: translateX(0);
    }
  }

  .hero-cta .cta-arrow {
    display: inline-block;
    animation: arrowBounceX 1.6s ease-in-out infinite;
  }

  /* -------------------------------------------------- */
  /* MOBILE */
  /* -------------------------------------------------- */

  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 5rem 0;
      padding-left: 0;
      padding-right: 0;
    }

    .hero-pattern {
      opacity: 0.28;
      transform: scale(1);
    }

    .hero-pattern > svg {
      display: none;
    }

    .hero-pattern-mobile {
      display: block;
      opacity: 0.45;
    }

    .hero-pattern-mobile svg {
      transform: translateY(0px) scale(1.25);
    }

    .hero-pattern-mobile svg line {
      stroke-width: 4 !important;
      opacity: 0.65 !important;
    }

    .hero-title {
      font-size: 3.8rem;
      line-height: 1.05;
      margin-bottom: 2rem;
    }

    .hero-inner {
      margin-left: 0;
      padding: 0 1.5rem;
    }

    .hero-cta {
      transform: scale(1.05);
      font-size: 1.15rem;
    }

    .hero-cta .underline {
      transform: scaleX(1);
      opacity: 1;
    }
  }
</style>

<script is:inline>
  /* Mouse Parallax */
  const pattern = document.getElementById('heroPattern')

  window.addEventListener('mousemove', (e) => {
    const x = (e.clientX / window.innerWidth - 0.5) * 10
    const y = (e.clientY / window.innerHeight - 0.5) * 10
    pattern.style.transform = `translate(${x}px, ${y}px) scale(1.12)`
  })
</script>
