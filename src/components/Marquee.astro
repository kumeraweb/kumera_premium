---
import { Rocket, Smartphone, Globe, BarChart3 } from '@lucide/astro'

const items = [
  { icon: BarChart3, text: 'Campañas de Google Ads' },
  { icon: Rocket, text: 'Aplicaciones Web' },
  { icon: Smartphone, text: 'Apps Móviles' },
  { icon: Globe, text: 'Diseño Web Moderno' }
]
---

<section class="km-marquee">
  <div class="km-marquee-track">
    {
      items.map(({ icon: Icon, text }) => (
        <div class="km-marquee-item">
          <Icon class="icon" />
          <span>{text}</span>
        </div>
      ))
    }

    {
      items.map(({ icon: Icon, text }) => (
        <div class="km-marquee-item">
          <Icon class="icon" />
          <span>{text}</span>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* -------------------------------------------------- */
  /* MARQUEE BASE                                       */
  /* -------------------------------------------------- */
  .km-marquee {
    width: 100%;
    overflow: hidden;
    background: var(--color-bg);
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    padding: 1rem 0;
  }

  .km-marquee-track {
    display: flex;
    align-items: center;
    gap: 3rem;
    white-space: nowrap;

    animation: marqueeMove 22s linear infinite;
  }

  .km-marquee-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.05rem;
    font-weight: 500;
    color: var(--color-text);

    letter-spacing: -0.02em;
  }

  .km-marquee-item span {
    color: var(--color-brand); /* azul petróleo */
    font-weight: 600;
  }

  .icon {
    width: 1.2rem;
    height: 1.2rem;
    color: var(--color-text);
    opacity: 0.65;
  }

  /* -------------------------------------------------- */
  /* ANIMACIÓN                                           */
  /* -------------------------------------------------- */
  @keyframes marqueeMove {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* -------------------------------------------------- */
  /* MOBILE                                              */
  /* -------------------------------------------------- */
  @media (max-width: 768px) {
    .km-marquee-track {
      animation-duration: 18s; /* un poquito más rápido */
      gap: 2rem;
    }

    .km-marquee-item {
      font-size: 0.95rem;
      gap: 0.5rem;
    }

    .icon {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
