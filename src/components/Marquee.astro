---
const items = ['Campañas de Google Ads', 'Aplicaciones Web', 'Apps Móviles', 'Diseño Web Moderno']
---

<section class="km-marquee">
  <div class="km-marquee-track">
    {
      items.map((text) => (
        <div class="km-marquee-item">
          <span>{text}</span>
          <div class="sep">⟡</div>
        </div>
      ))
    }
    {
      items.map((text) => (
        <div class="km-marquee-item">
          <span>{text}</span>
          <div class="sep">⟡</div>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* -------------------------------------------------- */
  /* MARQUEE BASE — fondo deep + texto grande           */
  /* -------------------------------------------------- */
  .km-marquee {
    width: 100%;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.9); /* MISMO FONDO DEL HEADER SCROLLED */
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    padding: 1.6rem 0; /* un poco más alto */
  }

  .km-marquee-track {
    display: flex;
    align-items: center;
    white-space: nowrap;
    gap: 4rem; /* más elegante con más aire */

    animation: marqueeMove 20s linear infinite;
  }

  /* -------------------------------------------------- */
  /* ÍTEM — más grande, más editorial                   */
  /* -------------------------------------------------- */
  .km-marquee-item {
    display: flex;
    align-items: center;
    gap: 2rem; /* separador amplio */
    font-weight: 600;
    font-size: 1.4rem; /* ← MUCHO MÁS GRANDE */
    letter-spacing: -0.02em;
  }

  .km-marquee-item span {
    color: rgba(255, 255, 255, 0.88); /* blanco elegante */
  }

  /* -------------------------------------------------- */
  /* SEPARADOR ⟡                                         */
  /* -------------------------------------------------- */
  .sep {
    font-size: 2rem;
    color: rgba(255, 255, 255, 0.22);
    line-height: 0;
    transform: translateY(-2px);
    user-select: none;
  }

  /* -------------------------------------------------- */
  /* ANIMACIÓN                                           */
  /* -------------------------------------------------- */
  @keyframes marqueeMove {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* -------------------------------------------------- */
  /* MOBILE                                              */
  /* -------------------------------------------------- */
  @media (max-width: 768px) {
    .km-marquee {
      padding: 1.2rem 0;
    }

    .km-marquee-track {
      animation-duration: 16s;
      gap: 2.5rem;
    }

    .km-marquee-item {
      font-size: 1.1rem;
      gap: 1.2rem;
    }

    .sep {
      font-size: 1.6rem;
    }
  }
</style>
